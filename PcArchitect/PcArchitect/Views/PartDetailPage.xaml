<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PcArchitect.Views.PartDetailPage"
             xmlns:viewmodel="clr-namespace:PcArchitect.ViewModel"
             x:DataType="viewmodel:PartDetailViewModel"
             Shell.NavBarIsVisible="False"
             Shell.PresentationMode="Animated"
             Title="PartDetailPage">
    
    <ScrollView>
        <CollectionView ItemsSource="{Binding Part}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding Part.Name}" HorizontalOptions="CenterAndExpand"/>
                        <Image Source="{Binding Part.Image}" Aspect="AspectFill" HorizontalOptions="CenterAndExpand"/>
                        <Label Text="{Binding Part.Price}" HorizontalOptions="CenterAndExpand"/>
                        <Button Text="Details" BackgroundColor="{StaticResource Signature}" HorizontalOptions="FillAndExpand"/>
                        <StackLayout IsVisible="True">
                            <Label Text="{Binding Part.Discription}"/>
                        </StackLayout>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>
    
</ContentPage>