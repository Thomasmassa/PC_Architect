            <Label Text="{Binding Name}" HorizontalOptions="CenterAndExpand" Background="Red" HeightRequest="100"/>
            <Image Source="{Binding Image}" Aspect="AspectFill" HorizontalOptions="CenterAndExpand" Background="Red"/>
            <Label Text="Test" HorizontalOptions="CenterAndExpand" Background="Red"/>
            <Button Text="Details" BackgroundColor="{StaticResource Signature}" HorizontalOptions="FillAndExpand"/>
            <StackLayout IsVisible="True">
                <Label Text="{Binding Discription}"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>-->
</ContentPage>