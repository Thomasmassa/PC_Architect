<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PcArchitect.Views.PartDetailPage"
             xmlns:viewmodel="clr-namespace:PcArchitect.ViewModel"
             xmlns:interfaces="clr-namespace:PcArchitect.Interfaces"
             x:DataType="viewmodel:PartDetailViewModel"
             Shell.NavBarIsVisible="False"
             Shell.PresentationMode="NotAnimated"
             Title="PartDetailPage">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="NavigatedTo" x:TypeArguments="NavigatedToEventArgs" Command="{Binding PageNavigatedCommand}"/>
    </ContentPage.Behaviors>


    <StackLayout Background="{StaticResource BackgroundBackgroundColor}">
        <CollectionView ItemsSource="{Binding Component}" VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="interfaces:IComponent">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Image Source="{Binding Image}" HorizontalOptions="Center" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="3"
                               VerticalOptions="FillAndExpand" HeightRequest="200" Background="Purple"/>

                        <!--TITLE-->
                        <Label Text="{Binding Name}" FontFamily="Koulen" Grid.Row="0" Grid.ColumnSpan="3" Background="White"
                                VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" FontSize="Subtitle"
                                HorizontalTextAlignment="Center" Margin="0,3,0,0" TextColor="{StaticResource PrimaryText}"/>

                        <!--Price-->
                        <Label Text="{Binding Price, StringFormat='â‚¬{0}'}" FontFamily="Koulen" TextColor="{StaticResource TextPriceColor}"
                                FontAttributes="Bold" Grid.Row="3" Grid.ColumnSpan="3" VerticalOptions="CenterAndExpand" 
                                FontSize="Large" Margin="0,10,10,0" HorizontalOptions="Center" Background="Yellow"/>
                        
                        <!--DISCRIPTION-->
                        <Label Text="{Binding Discription}" FontFamily="Koulen" LineHeight="0.6" TextColor="Black" 
                                Grid.Row="4" Grid.ColumnSpan="3" Margin="10,0,0,0" VerticalOptions="CenterAndExpand"
                                FontSize="Caption"  HorizontalOptions="Center" Background="Green" HorizontalTextAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>




