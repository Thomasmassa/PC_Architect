<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PcArchitect.Views.MyBuildPage"
             xmlns:viewmodel="clr-namespace:PcArchitect.ViewModel"
             Shell.PresentationMode="NotAnimated"
             Shell.NavBarIsVisible="False"
             >

    <StackLayout BackgroundColor="{StaticResource BackgroundBackgroundColor}">
        <CollectionView ItemsSource="{Binding Components}" VerticalOptions="FillAndExpand">
            <CollectionView.Header>
                <Label Text="My Build Page"
                       TextColor="{StaticResource Signature}"
                       VerticalOptions="Center" 
                       FontSize="Large"
                       FontFamily="Koulen"
                       HorizontalOptions="Center" />
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="15*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Frame x:Name="presetFrame" 
                               IsVisible="{Binding IsPresetFrameEnabled}" 
                               Grid.Row="0" 
                               Grid.Column="1" 
                               CornerRadius="15" 
                               HeightRequest="100"
                               BackgroundColor="#D4D4D4" 
                               Margin="0,10,0,10">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:StartBuildingViewModel}}, Path=GoToPartsListCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            <Grid BackgroundColor="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>

                                <Image Source="desktop.png" 
                                       Grid.Column="0"/>
                                <Label Text="{Binding Name}" 
                                       TextColor="Black" 
                                       Grid.Column="1" 
                                       VerticalOptions="CenterAndExpand"
                                       HorizontalOptions="CenterAndExpand" 
                                       FontSize="30" FontFamily="Koulen"/>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>